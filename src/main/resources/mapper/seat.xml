<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenco.indiepicter.seat.SeatRepository">

    <!-- 좌석 예매 등록 -->
    <insert id="insert">
        insert into seat_tb(seat_name, running_schedule_id, user_id) values (#{seatName}, #{runningScheduleId}, #{userId})
    </insert>

    <!-- 좌석 예매 삭제 -->
    <delete id="deleteById">
        delete from seat_tb where id = #{id}
    </delete>

    <!-- 상영시간에 따른 좌석 조회 -->
    <select id="findByRunningDateId" resultMap="existSeatDTOResultMap">
        select seat_name from seat_tb where running_schedule_id = #{runningDateId}
    </select>
    <resultMap id="existSeatDTOResultMap" type="com.tenco.indiepicter.seat.response.ExistSeatDTO">
        <result property="seatName" column="seat_name"/>
    </resultMap>

    <!-- 상영시간과 유저에 따른 좌석 목록 조회 -->
    <select id="findByRunningDateIdAndUserId" resultType="com.tenco.indiepicter.seat.Seat">
        select * from Seat_tb where running_schedule_id = #{runningDateId} and user_id = #{principalId}
    </select>

    <!-- 좌석 전체 조회 -->
    <select id="findAll" resultType="com.tenco.indiepicter.seat.Seat">
        select * from Seat_tb
    </select>


</mapper>