<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenco.indiepicter.user.UserRepository">
	
	<!-- 회원 가입 -->
	<insert id="insert">
		insert into user_tb(user_email, password, username, tel, grade, gubun, created_at)
		values(#{userEmail}, #{password}, #{username}, #{tel}, #{grade}, #{gubun}, now())
	</insert>
	
	<!-- 이메일 중복 검사 -->
	<select id="selectId" resultType="boolean">
		select count(*)
		from user_tb
		where = #{id}
	</select>
	
	<!-- 회원 전체 조회 -->
	<select id="findAll" resultType="com.tenco.indiepicter.user.UserRepository">
		select * from user
	</select>


</mapper>